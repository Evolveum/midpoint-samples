<!-- User template that demonstrates advanced usage such as account assignment and RB-RBAC -->

<userTemplate oid="10000000-0000-0000-0000-000000000222"
   xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://midpoint.evolveum.com/xml/ns/public/common/common-2'
   xmlns:c='http://midpoint.evolveum.com/xml/ns/public/common/common-2'
   xmlns:t='http://prism.evolveum.com/xml/ns/public/types-2'>
    <name>Complex User Template</name>
    <propertyConstruction>
        <property>c:fullName</property>
        <valueConstruction>
        	<!-- This expression is NOT initial so if will in fact FORCE fullname consistency -->
            <expression>
            	<language>http://midpoint.evolveum.com/xml/ns/public/expression/language#Groovy</language>
            	<code>
            		user.getGivenName() + ' ' + user.getFamilyName()
                </code>
            </expression>
        </valueConstruction>
    </propertyConstruction>
    
    <!-- Unconditional automatic assignment of account on OpenDJ resource -->
    <propertyConstruction>
        <property>assignment</property>
        <valueConstruction>
            <value>
            	<assignment>
					<accountConstruction>
						<resourceRef oid="ef2bc95b-76e0-48e2-86d6-3d4f02d3e1a2" type="c:ResourceType"/>
					</accountConstruction>
				</assignment>
            </value>
        </valueConstruction>
    </propertyConstruction>
    
    <!-- RB-RBAC functionality. The Pirate role is automatically assigned based on the value of employeeType property -->
    <propertyConstruction>
        <property>assignment</property>
        <valueConstruction>
            <value>
            	<assignment>
					<targetRef oid="12345678-d34d-b33f-f00d-987987987988" type="c:RoleType"/>
				</assignment>
            </value>
            <condition>
            	<language>http://midpoint.evolveum.com/xml/ns/public/expression/language#Groovy</language>
            	<!-- Need to use contains instead of == as the employeeType is a multivalued property -->
            	<code>user.getEmployeeType().contains("PIRATE")</code>
            </condition>
        </valueConstruction>
    </propertyConstruction>
    
    <!-- Automatically generate employee number if there is none (note the "initial" flag) -->
    <propertyConstruction>
        <property>employeeNumber</property>
        <valueConstruction>
        	<initial>true</initial>
        	<generate>
        		<length>10</length>
        	</generate>
        </valueConstruction>
    </propertyConstruction>
</userTemplate>
