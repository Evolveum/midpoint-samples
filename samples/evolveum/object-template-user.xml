<objectTemplate oid="7d47f920-07db-11e7-97ab-9f2adc778984"
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' 
	xmlns='http://midpoint.evolveum.com/xml/ns/public/common/common-3'
	xmlns:c='http://midpoint.evolveum.com/xml/ns/public/common/common-3'
	xmlns:t='http://prism.evolveum.com/xml/ns/public/types-3' 
	xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3">
	
	<name>User Template</name>

	<mapping>
		<name>template-user-name</name>
		<strength>weak</strength>
		<source>
			<path>givenName</path>
		</source>
		<source>
			<path>familyName</path>
		</source>
		<expression>
			<script>
				<code>givenName.getNorm().take(1) + familyName.getNorm()</code>
			</script>
		</expression>
		<target>
			<path>name</path>
		</target>
		<condition>
			<script>
				<code>givenName != null &amp;&amp; familyName != null</code>
			</script>			
		</condition>
	</mapping>

	<mapping>
		<name>template-user-email</name>
		<strength>weak</strength>
		<source>
			<path>givenName</path>
		</source>
		<source>
			<path>familyName</path>
		</source>
		<expression>
			<script>
				<code>givenName.getNorm() + '.' + familyName.getNorm() + '@evolveum.com'</code>
			</script>
		</expression>
		<target>
			<path>emailAddress</path>
		</target>
		<condition>
			<script>
				<code>givenName != null &amp;&amp; familyName != null</code>
			</script>			
		</condition>
	</mapping>

	<mapping>
		<name>template-user-org</name>
		<strength>strong</strength>
		<source>
			<path>organizationalUnit</path>
		</source>
		<expression>
			<assignmentTargetSearch>
				<targetType>c:OrgType</targetType>
				<filter>
					<q:equal>
						<q:path>name</q:path>
						<expression>
							<path>$organizationalUnit</path>
						</expression>
					</q:equal>
				</filter>
			</assignmentTargetSearch>    	
		</expression>
		<target>
			<path>assignment</path>
		</target>
	</mapping>

	<mapping>
		<name>template-user-role</name>
		<strength>strong</strength>
		<source>
			<path>title</path>
		</source>
		<expression>
			<assignmentTargetSearch>
				<targetType>c:RoleType</targetType>
				<filter>
					<q:equal>
						<q:path>name</q:path>
						<expression>
							<path>$title</path>
						</expression>
					</q:equal>
				</filter>
			</assignmentTargetSearch>    	
		</expression>
		<target>
			<path>assignment</path>
		</target>
	</mapping>

</objectTemplate>
