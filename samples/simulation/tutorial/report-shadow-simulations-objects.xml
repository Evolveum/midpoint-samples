            </column>
            <column>
                <name>state</name>
                <path>state</path>
                <previousColumn>tag</previousColumn>
            </column>
            <column>
                <name>eventMarkRef</name>
                <path>eventMarkRef</path>
                <previousColumn>state</previousColumn>
