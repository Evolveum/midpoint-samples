            </filter>
        </collection>
        <view>
            <column>
                <name>id</name>
                <display>
                    <label>ID</label>
                </display>
                <export>
                    <expression>
                        <script>
                            <code>object.id</code>
                        </script>
                    </expression>
                </export>
            </column>
            <column>
                <name>oid</name>
                <path>oid</path>
                <display>
