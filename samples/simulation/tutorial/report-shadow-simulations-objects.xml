    <name>Simulation report: Shadows (objects)</name>
    <objectCollection>
        <collection>
            <!-- Type is declared in the view element. -->
            <filter>
                <q:inOid>
                    <c:expression>
                        <c:script>
                            <c:code>simulationResultRef?.oid</c:code>
                        </c:script>
                    </c:expression>
                    <q:considerOwner>true</q:considerOwner>
