                <previousColumn>resourceRef</previousColumn>
            </column>
            <column>
                <name>intent</name>
                <path>resourceObjectCoordinates/intent</path>
                <previousColumn>kind</previousColumn>
            </column>
            <column>
                <name>tag</name>
                <path>resourceObjectCoordinates/tag</path>
