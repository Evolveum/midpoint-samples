<dashboard xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
           xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
           xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
           oid="00000000-0000-0000-0001-000000001001">
    <name>compliance-dashboard</name>
    <display>
        <label>
            <orig>Compliance dashboard</orig>
            <translation>
                <key>ComplianceDashboard.title</key>
            </translation>
        </label>
    </display>
    <widget id="1">
        <identifier>security-understaffing</identifier>
        <description>Security responsibilities that are not properly staffed.</description>
        <display>
            <label>
                <orig>Security understaffing</orig>
                <translation>
                    <key>ComplianceDashboard.securityUnderstaffing</key>
                </translation>
            </label>
            <icon>
                <cssClass>fa fa-person-arrow-down-to-line</cssClass>
            </icon>
            <tooltip>Security responsibilities that are not properly staffed.</tooltip>
            <color>var(--success)</color>
        </display>
        <data>
            <sourceType>objectCollection</sourceType>
            <collection>
                <collectionRef oid="00000000-0000-0000-0001-000000000351" type="c:ObjectCollectionType"/>
            </collection>
        </data>
        <presentation>
            <dataField id="5">
                <fieldType>value</fieldType>
                <expression>
                    <proportional>
                        <style>value-only</style>
                    </proportional>
                </expression>
            </dataField>
        </presentation>
    </widget>

    <widget id="2">
        <identifier>users-with-sod-violations</identifier>
        <description>Users with SoD violations.</description>
        <display>
            <label>
                <orig>Users with SoD violations</orig>
                <translation>
                    <key>ComplianceDashboard.usersWithSodViolations</key>
                </translation>
            </label>
            <color>#28a745</color>
            <icon>
                <cssClass>fa fa-people-arrows</cssClass>
            </icon>
        </display>
        <data>
            <sourceType>objectCollection</sourceType>
            <collection>
                <collectionRef oid="00000000-0000-0000-0001-000000000353" type="c:ObjectCollectionType"/>
            </collection>
        </data>
        <presentation>
            <dataField id="5">
                <fieldType>value</fieldType>
                <expression>
                    <proportional>
                        <style>value-only</style>
                    </proportional>
                </expression>
            </dataField>
        </presentation>
    </widget>

    <widget id="3">
        <identifier>suspicious-objects</identifier>
        <description>Objects marked as "suspicious".</description>
        <display>
            <label>
                <orig>Suspicious objects</orig>
            </label>
            <icon>
                <cssClass>fa fa-handcuffs</cssClass>
            </icon>
            <color>var(--success)</color>
        </display>
        <data>
            <sourceType>objectCollection</sourceType>
            <collection>
                <collectionRef oid="00000000-0000-0000-0001-000000000352" type="c:ObjectCollectionType"/>
            </collection>
        </data>
        <presentation>
            <dataField id="5">
                <fieldType>value</fieldType>
                <expression>
                    <proportional>
                        <style>value-only</style>
                    </proportional>
                </expression>
            </dataField>
            <variation>
                <condition>
                    <script>
                        <code>proportional.value > 0</code>
                    </script>
                </condition>
                <display>
                    <color>var(--orange)</color>
                </display>
            </variation>
<!--            <variation>
                <condition>
                    <script>
                        <code>proportional.value > 3</code>
                    </script>
                </condition>
                <display>
                    <color>#dc3545</color>
                </display>
            </variation> -->
        </presentation>
    </widget>


    <widget id="100">
        <identifier>all-information-security-responsibilities</identifier>
        <description>All objects that are classified as information security responsibilities.</description>
        <display>
            <label>
                <orig>All information security responsibilities</orig>
            </label>
            <icon>
                <cssClass>fa fa-building-shield</cssClass>
            </icon>
            <color>var(--secondary)</color>
        </display>
        <data>
            <sourceType>objectCollection</sourceType>
            <collection>
                <collectionRef oid="00000000-0000-0000-0001-000000000350" type="c:ObjectCollectionType"/>
            </collection>
        </data>
        <presentation>
            <dataField id="5">
                <fieldType>value</fieldType>
                <expression>
                    <proportional>
                        <style>value-only</style>
                    </proportional>
                </expression>
            </dataField>
        </presentation>
    </widget>
</dashboard>
