<objectTemplate xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
                oid="778dd02c-76a1-4300-87d6-2ed7ecec1cb3">

    <name>Business role template</name>
    <description>Initial object template for business role</description>

    <!-- ordering and displaying of items on page -->
    <!-- General container -->
    <item>
        <ref>name</ref>
        <help>Identification of the business role. &lt;br&gt;
            Name must be unique among all roles (all types of roles) in midPoint.</help>
        <displayOrder>10</displayOrder>
        <emphasized>true</emphasized>
    </item>
    <item>
        <ref>displayName</ref>
        <help>Readable name of the business role. Will be displayed in most places instead of name.
            If not filled in, then name is displayed. Doesn't have to be unique.</help>
        <displayOrder>20</displayOrder>
        <emphasized>true</emphasized>
    </item>
    <item>
        <ref>description</ref>
        <help>Description of the business role that can be useful for users.</help>
        <displayOrder>30</displayOrder>
        <emphasized>true</emphasized>
    </item>
    <item>
        <ref>riskLevel</ref>
        <help>Indication of the level of risk that assignment of this role represents.</help>
        <displayOrder>50</displayOrder>
        <emphasized>true</emphasized>
    </item>
    <item>
        <ref>requestable</ref>
        <help>If set to true, this application may be requested by users.</help>
        <displayOrder>60</displayOrder>
        <emphasized>true</emphasized>
    </item>
    <item>
        <ref>jpegPhoto</ref>
        <displayName>Business role icon</displayName>
        <help>Icon of the business role.</help>
        <displayOrder>70</displayOrder>
        <emphasized>true</emphasized>
    </item>

</objectTemplate>