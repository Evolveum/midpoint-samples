                    </populateItem>
                    <populateItem>
                        <expression>
                            <script>
                                <code>courseMembership + '@bshp.edu'</code>
                            </script>
                        </expression>
                        <target>
                            <c:path>mailDomain</c:path>
                        </target>
                    </populateItem>
                    <populateItem>
                        <expression>
                            <value>Course Group</value>
                        </expression>
                        <target>
                            <c:path>subtype</c:path>
                        </target>
                    </populateItem>
                    <populateItem>
                        <expression>
                            <value>false</value>
                        </expression>
                        <target>
                            <c:path>requestable</c:path>
                        </target>
                    </populateItem>
                    <populateItem>
                        <expression>
                            <value>false</value>
                        </expression>
                        <target>
                            <c:path>delegable</c:path>
                        </target>
                    </populateItem>
                    <populateItem>
                        <expression>
                            <value>Moderate</value>
                        </expression>
                        <target>
                            <c:path>riskLevel</c:path>
                        </target>
                    </populateItem>
                    <populateItem>
                        <expression>
                            <value>false</value>
                        </expression>
                        <target>
                            <c:path>tenant</c:path>
                        </target>
                    </populateItem>
                    <populateItem>
                        <expression>
                            <assignmentTargetSearch>
                                <targetType>c:OrgType</targetType>
                                <oid>ldap-ouCoursesRoot</oid>
                            </assignmentTargetSearch>
                        </expression>
                        <target>
                            <c:path>assignment</c:path>
                        </target>
                    </populateItem>
                    <populateItem>
                        <expression>
                            <assignmentTargetSearch>
                                <targetType>c:RoleType</targetType>
                                <oid>159cd4a7-28b1-4ae0-8194-d1606c340206</oid>
                            </assignmentTargetSearch>
                        </expression>
                        <target>
                            <c:path>assignment</c:path>
                        </target>
                    </populateItem>
                </populateObject>
            </assignmentTargetSearch>
        </expression>
        <target>
            <c:path>assignment</c:path>
        </target>
        <condition>
            <script>
                <code>academicStatus == 'Faculty' &amp;&amp; courseMembership != null</code>
            </script>
        </condition>
    </mapping>
</objectTemplate>
