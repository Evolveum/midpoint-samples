                            <script>
                                <code>courseMembership</code>
                            </script>
                        </expression>
                    </q:equal>
                </filter>
                <assignmentProperties>
                    <relation>org:manager</relation>
                </assignmentProperties>
                <createOnDemand>true</createOnDemand>
