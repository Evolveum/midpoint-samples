<!-- TODO convert to iterative bulk action -->
<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
      xmlns:s="http://midpoint.evolveum.com/xml/ns/public/model/scripting-3"
      xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
        oid="cdec8b43-2ccd-46a1-b003-cc6e5e8b25c7">
    <name>List selected resource objects</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002"/>
    <executionState>runnable</executionState>
    <activity>
        <work>
            <nonIterativeScripting>
                <scriptExecutionRequest>
                    <s:search>
                        <s:type>ShadowType</s:type>
                        <s:searchFilter>
                            <q:text>
                                resourceRef matches (oid = 'ef2bc95b-76e0-48e2-86d6-3d4f02d30001')
                                and objectClass = ri:CustomAcceptedDomainObjectClass
                            </q:text>
                        </s:searchFilter>
                        <s:action>
                            <s:type>log</s:type>
                        </s:action>
                    </s:search>
                </scriptExecutionRequest>
            </nonIterativeScripting>
        </work>
    </activity>
</task>
