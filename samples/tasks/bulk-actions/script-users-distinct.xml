<!-- TODO convert to iterative scripting -->
<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
      xmlns:s="http://midpoint.evolveum.com/xml/ns/public/model/scripting-3"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <name>script users (distinct)</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002"/>
    <executionState>runnable</executionState>
    <activity>
        <work>
            <nonIterativeScripting>
                <scriptExecutionRequest>
                    <s:search>
                        <s:type>c:UserType</s:type>
                        <s:query>
                            <q:filter>
                                <q:exists>
                                    <q:path>assignment</q:path>
                                    <q:filter>
                                        <q:or>
                                            <q:ref>
                                                <q:path>targetRef</q:path>
                                                <q:value oid="00000000-0000-0000-0000-00000000000a" type="c:RoleType"
                                                         xsi:type="c:ObjectReferenceType"/>
                                                <!-- Approver -->
                                            </q:ref>
                                            <q:ref>
                                                <q:path>targetRef</q:path>
                                                <q:value oid="00000000-0000-0000-0000-00000000000c" type="c:RoleType"
                                                         xsi:type="c:ObjectReferenceType"/>
                                                <!-- Delegator -->
                                            </q:ref>
                                            <q:ref>
                                                <q:path>targetRef</q:path>
                                                <q:value oid="00000000-0000-0000-0000-000000000008" type="c:RoleType"
                                                         xsi:type="c:ObjectReferenceType"/>
                                                <!-- End user -->
                                            </q:ref>
                                            <q:ref>
                                                <q:path>targetRef</q:path>
                                                <q:value oid="00000000-0000-0000-0000-00000000000b" type="c:RoleType"
                                                         xsi:type="c:ObjectReferenceType"/>
                                                <!-- Reviewer -->
                                            </q:ref>
                                            <q:ref>
                                                <q:path>targetRef</q:path>
                                                <q:value oid="00000000-0000-0000-0000-000000000004" type="c:RoleType"
                                                         xsi:type="c:ObjectReferenceType"/>
                                                <!-- Superuser -->
                                            </q:ref>
                                        </q:or>
                                    </q:filter>
                                </q:exists>
                            </q:filter>
                        </s:query>
                        <s:options>
                            <c:option>
                                <c:options>
                                    <c:distinct>true</c:distinct>
                                </c:options>
                            </c:option>
                        </s:options>
                        <s:action>
                            <s:type>execute-script</s:type>
                            <s:parameter>
                                <s:name>script</s:name>
                                <c:value xsi:type="c:ScriptExpressionEvaluatorType">
                                    <c:code>
                                        log.info('Hello {}', input)
                                    </c:code>
                                </c:value>
                            </s:parameter>
                        </s:action>
                    </s:search>
                </scriptExecutionRequest>
            </nonIterativeScripting>
        </work>
    </activity>
</task>
