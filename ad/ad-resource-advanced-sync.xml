           <argument>
               <value>jbond</value>
               <name>HOMEDIR</name>
           </argument>
           <code>
   echo "after create," >> C:\a.txt
   exit
           </code>
           </script>

           <script>
           <operation>add</operation>
           <order>before</order>
   <language>Shell</language>
   <host>resource</host>
           <argument>
               <value>jbond</value>
               <name>HOMEDIR</name>
           </argument>
