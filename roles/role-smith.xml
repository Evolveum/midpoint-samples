<!-- A role that specifies account on OpenDJ resource and also sets the
     "title" attribute to a fixed value. -->

<role oid="12345678-d34d-b33f-f00d-987987555555"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-2"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-2">
    <name>Smith</name>
    <assignment>
        <accountConstruction xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-2">
        	<!-- The c: prefix in type must be there due to a JAXB bug -->
            <resourceRef oid="ef2bc95b-76e0-48e2-86d6-3d4f02d3e1a2" type="c:ResourceType"/>
            <attribute>
                <ref>ri:title</ref>
                <outbound>
                   	<expression>
               			<value>Master Blacksmith</value>
               		</expression>
                </outbound>
            </attribute>
        </accountConstruction>
    </assignment>    
</role>
