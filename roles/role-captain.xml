<role oid="12345678-d34d-b33f-f00d-987987cccccc"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-2"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-2"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-2"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-2/ef2bc95b-76e0-48e2-86d6-3d4f02d3e1a2">
    <name>Captain</name>    
    <assignment>
    	<!-- Inner "sailor" role. This role includes sailor role, therefore any specifications
             of the sailor role also apply to this role. -->
        <targetRef oid="12345678-d34d-b33f-f00d-987955553535" type="RoleType"/>
    </assignment>
    <assignment>
    	<accountConstruction>
    		<!-- The c: prefix in type must be there due to a JAXB bug -->
    		<resourceRef oid="ef2bc95b-76e0-48e2-86d6-3d4f02d3e1a2" type="c:ResourceType"/>
    		<attribute>
                    <ref>ri:title</ref>
                    <outbound>
                    	<expression>
                    		<value>Honorable Captain</value>
                    	</expression>
                    </outbound>
                </attribute>    		
    		<attribute>
                    <ref>ri:carLicense</ref>
                    <outbound>
                    	<expression>
		                    <value>
		                        <ri:carLicense>C4PT41N</ri:carLicense>
		                    </value>
		                </expression>
		           	</outbound>
                </attribute>    		
    		<attribute>
                    <ref>ri:businessCategory</ref>
                    <outbound>
                    	<expression>
		                    <value>
		                        <ri:businessCategory>cruise</ri:businessCategory>
		                    </value>
		                </expression>
		            </outbound>
                </attribute>    		
                <attribute> 
                    <ref>ri:departmentNumber</ref>
                    <outbound>
                    	<source>
                    		<path>$user/givenName</path>
                    	</source>
                    	<expression>
		                    <script>
		                        <code>'Department of ' + givenName</code>
		                     </script>
		                 </expression>
		             </outbound>
                </attribute>
    	</accountConstruction>
    </assignment>    
</role>
